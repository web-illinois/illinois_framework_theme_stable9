{#
/**
 * @file
 * Default theme implementation to display a paragraph.
 *
 * Available variables:
 * - paragraph: Full paragraph entity.
 *   Only method names starting with "get", "has", or "is" and a few common
 *   methods such as "id", "label", and "bundle" are available. For example:
 *   - paragraph.getCreatedTime() will return the paragraph creation timestamp.
 *   - paragraph.id(): The paragraph ID.
 *   - paragraph.bundle(): The type of the paragraph, for example, "image" or "text".
 *   - paragraph.getOwnerId(): The user ID of the paragraph author.
 *   See Drupal\paragraphs\Entity\Paragraph for a full list of public properties
 *   and methods for the paragraph object.
 * - content: All paragraph items. Use {{ content }} to print them all,
 *   or print a subset such as {{ content.field_example }}. Use
 *   {{ content|without('field_example') }} to temporarily suppress the printing
 *   of a given child element.
 * - attributes: HTML attributes for the containing element.
 *   The attributes.class element may contain one or more of the following
 *   classes:
 *   - paragraphs: The current template type (also known as a "theming hook").
 *   - paragraphs--type-[type]: The current paragraphs type. For example, if the paragraph is an
 *     "Image" it would result in "paragraphs--type--image". Note that the machine
 *     name will often be in a short form of the human readable label.
 *   - paragraphs--view-mode--[view_mode]: The View Mode of the paragraph; for example, a
 *     preview would result in: "paragraphs--view-mode--preview", and
 *     default: "paragraphs--view-mode--default".
 * - view_mode: View mode; for example, "preview" or "full".
 * - logged_in: Flag for authenticated user status. Will be true when the
 *   current user is a logged-in member.
 * - is_admin: Flag for admin user status. Will be true when the current user
 *   is an administrator.
 *
 * @see template_preprocess_paragraph()
 *
 * @ingroup themeable
 */
#}
{% if content.field_cta_fingerprint['#items'].0.value %}
  {% set fingerprint = 'fingerprint--'~ content.field_cta_fingerprint['#items'].0.value %}
{% else %}
  {% set fingerprint = '' %}
{% endif %}
{% if content.field_cta_background['#items'].0.value %}
  {% set theme = content.field_cta_background['#items'].0.value == 'illiniblue'
    ? 'blue'
    : content.field_cta_background['#items'].0.value == 'illiniorange'
    ? 'orange'
    : content.field_cta_background['#items'].0.value == 'bluegradient'
    ? 'blue-gradient'
    : content.field_cta_background['#items'].0.value == 'orangegradient'
    ? 'orange-gradient'
    : content.field_cta_background['#items'].0.value == 'white'
    ? 'white'
    : content.field_cta_background['#items'].0.value == 'gray'
    ? 'gray' %}
{% endif %}
{% if content.field_cta_layout['#items'].0.value %}
  {% set align = content.field_cta_layout['#items'].0.value == 'center'
    ? 'center'
    : content.field_cta_layout['#items'].0.value == 'right'
    ? 'right'
    : '' %}
{% endif %}


{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished'
  ]
%}
{% block paragraph %}
  {# Paragraph ID used for anchor linking #}
  <div {{ attributes.setAttribute('id', 'paragraph--' ~ paragraph.id() ) }} {{ attributes.addClass(classes) }} >
    {% block content %}
      <ilw-call-to-action theme="{{ theme }}" align="{{ align }}">
        {% if content.field_icon_row_content_icon['#items'] %}
          <ilw-icon slot="icon" icon="{{ cta_icon }}"></ilw-icon>
        {% elseif content.field_cta_icon['#items'] %}{# this is a deprecated image field replaced by ilw-icon #}
          <img src="{{ base_path_http ~ file_url(content.field_cta_icon.0['#markup']) }}"
               alt="{{ content.field_cta_icon['#items'].0.alt }}" slot="icon" />
        {% endif %}
        {% if content.field_cta_subtitle['#items'] %}
        <div class="field--name-field-cta__subtitle subtitle">{{ content.field_cta_subtitle }}</div>
        {% endif %}
        {% if content.field_cta_title['#items'] %}
        <h2>{{ content.field_cta_title }}</h2>
        {% endif %}
        {% if content.field_cta_body['#items'] %}
        <div class="field--name-field-cta__body body">{{ content.field_cta_body }}</div>
        {% endif %}
        {% set button_number = content.field_cta_button['#items']|length %}
            {% if button_number > 0 %}
            <ul class="ilw-buttons{{ theme == 'orange-gradient' ? ' ilw-theme-orange-2' }}">{# temp fix until orange-gradient is added to toolkit #}
              {% for item in content.field_cta_button['#items'] %}
              <li>
                <a href="{{ content.field_cta_button[loop.index0]['#url'] }}">{{ content.field_cta_button[loop.index0]['#title'] }}</a>
               </li>
              {% endfor %}
            </ul>
            {% endif %}
      </ilw-call-to-action>
    {% endblock %}
  </div>
{% endblock paragraph %}
